<div class="block">
<h3>Welcome <%=current_user.email%></h3>
</div>
<div class="span9">
	<%= form_for(@list) do |l| %>
		<div class="field">
			<%= l.label :name, 'What is the name of your new list?'%>
			<%= l.text_field :name %>
		</div>
		<div class="field">
			<%= l.label :description, 'Want to add a description?'%>
			<%= l.text_field :description %>
		</div>
		<div class="actions">
			<%= l.submit %>
		</div>
	<% end %>
</div>

<div class="span3">

	<% if current_user.lists.empty? %>
	<h3>You currently have no lists</h3>
	<% else %>
	<h4>These are your lists</h4>
<ol>
<% current_user.lists.each do |list| %>
<li>	
		<%= link_to list.name, list_path(list) %>
</li>
	<% end %>
<% end %>
</div>